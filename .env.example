# Environment Configuration Example
# Copy this file to .env.local and update with your values

# Application Environment
NODE_ENV=production
VITE_APP_TITLE=Zifr.one
VITE_APP_DESCRIPTION=Built on Zero. Driven by One.
VITE_APP_VERSION=1.0.0

# API Configuration
VITE_API_URL=https://api.zifr.one
VITE_API_TIMEOUT=10000

# Contact Information
VITE_CONTACT_EMAIL=support@zifr.one
VITE_CONTACT_PHONE=+91-98765-43210
VITE_SUPPORT_EMAIL=help@zifr.one

# WhatsApp Configuration
VITE_WHATSAPP_NUMBER=+919876543210
VITE_WHATSAPP_BUSINESS_ID=your_business_id_here
VITE_WHATSAPP_DEFAULT_MESSAGE=Hi! I found your website and would like to know more about your services.

# Email Service Configuration (Server-side only)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM="Zifr.one Contact Form" <your-email@gmail.com>
CONTACT_EMAIL=support@zifr.one

# Security Configuration
VITE_RATE_LIMIT_REQUESTS=5
VITE_RATE_LIMIT_WINDOW=60000
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_ORIGINS=https://zifr.one,https://www.zifr.one

# Form Configuration
VITE_FORM_ENDPOINT=/.netlify/functions/send-contact-message
VITE_FORM_FALLBACK_ENDPOINT=/api/send-contact-message
VITE_WEBHOOK_URL=your_webhook_url_here

# Analytics and Tracking (optional)
VITE_GA_TRACKING_ID=GA_TRACKING_ID_HERE
VITE_HOTJAR_ID=HOTJAR_ID_HERE
VITE_FACEBOOK_PIXEL_ID=PIXEL_ID_HERE

# Performance Settings
VITE_LAZY_LOAD_THRESHOLD=100
VITE_IMAGE_OPTIMIZATION=true
VITE_SERVICE_WORKER_ENABLED=true

# Three.js Configuration
VITE_WEBGL_ENABLED=true
VITE_PERFORMANCE_MONITORING=true
VITE_THREE_JS_FALLBACK=true

# Development Settings
VITE_DEV_TOOLS=true
VITE_DEBUG_MODE=false
VITE_HOT_RELOAD=true

# Build Configuration
VITE_BUILD_SOURCEMAP=true
VITE_BUILD_ANALYZE=false
VITE_BUILD_MINIFY=true

# CDN and Assets (if using external CDN)
VITE_CDN_URL=https://cdn.zifr.one
VITE_STATIC_URL=https://static.zifr.one

# Social Media and SEO
VITE_SITE_URL=https://zifr.one
VITE_TWITTER_HANDLE=@zifr_one
VITE_FACEBOOK_PAGE=zifr.one
VITE_LINKEDIN_PAGE=company/zifr-one
VITE_INSTAGRAM_HANDLE=@zifr_one

# Business Information
VITE_COMPANY_NAME=Zifr.one
VITE_COMPANY_ADDRESS=Chennai, Tamil Nadu, India
VITE_COMPANY_FOUNDED=2020
VITE_BUSINESS_HOURS=Mon - Fri: 9:00 AM - 6:00 PM IST

# Feature Flags
VITE_ENABLE_ANIMATIONS=true
VITE_ENABLE_THREE_JS=true
VITE_ENABLE_SHIMMER_EFFECTS=true
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_WHATSAPP_INTEGRATION=true
VITE_ENABLE_CONTACT_FORM=true
VITE_ENABLE_EMAIL_NOTIFICATIONS=true

# Security Features
VITE_ENABLE_RATE_LIMITING=true
VITE_ENABLE_INPUT_SANITIZATION=true
VITE_ENABLE_CSRF_PROTECTION=true
VITE_ENABLE_XSS_PROTECTION=true

# Monitoring and Logging
VITE_ENABLE_CONSOLE_LOGGING=false
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ERROR_REPORTING=true

# Email Templates
EMAIL_TEMPLATE_PATH=./templates
EMAIL_LOGO_URL=https://zifr.one/logo.png

# Backup Configuration
BACKUP_EMAIL=backup@zifr.one
ADMIN_EMAIL=admin@zifr.one

# Rate Limiting Configuration
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf
UPLOAD_PATH=./uploads

# Database Configuration (if needed for analytics)
DATABASE_URL=your_database_url_here
DATABASE_SSL=true

# Cache Configuration
CACHE_TTL=3600
REDIS_URL=your_redis_url_here

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_TIMEOUT=10000

# Third-party Integrations
SLACK_WEBHOOK_URL=your_slack_webhook_here
DISCORD_WEBHOOK_URL=your_discord_webhook_here

# Backup Email Service (fallback)
BACKUP_SMTP_HOST=smtp.sendgrid.net
BACKUP_SMTP_USER=apikey
BACKUP_SMTP_PASS=your_sendgrid_api_key

# Content Security Policy
CSP_REPORT_URI=https://your-domain.report-uri.com/r/d/csp/enforce